@model CategoryViewModel
@{
    ViewData["Title"] = Model.Id == 0 ? "Add Category" : "Edit Category";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="display-6"><i class="fas fa-tags"></i> Categories</h2>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">@ViewBag.Title</h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-controller="categories" asp-action="@(Model.Id == 0 ? "create" : "edit")">
                        @if (Model.Id != 0)
                        {
                            <input type="hidden" asp-for="Id" />
                        }

                        <div class="form-group">
                            <label asp-for="Name" class="form-label">Category Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter category name" autofocus />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group d-flex justify-content-between mt-4">
                            <a class="btn btn-secondary" asp-controller="categories" asp-action="index">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
